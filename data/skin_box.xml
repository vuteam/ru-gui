<skin>
	<!-- VU+SOLO2 (LCD 1-row display 132x1) -->
	<!-- LCD screen (infobar) -->
	<screen name="InfoBarSummary" position="0,0" size="132,1" id="1">
		<widget source="session.CurrentService" render="RollerLabel" steptime="250" startdelay="2500"  position="0,0" size="80,1" halign="left" noWrap="1">
			<convert type="ServiceName">Name</convert>
		</widget>
	</screen>
	<!-- LCD screen (channelselection) -->
	<screen name="ChannelSelection_summary" position="0,0" size="132,1" id="1">
		<widget source="parent.ServiceEvent" render="RollerLabel" steptime="250" startdelay="2500"  position="0,0" size="80,1" halign="left" noWrap="1">
			<convert type="ServiceName">Name</convert>
		</widget>
	</screen>
	<!-- LCD screen (channelselection extended) -->
	<screen name="ChannelSelectionMulti_summary" position="0,0" size="132,1" id="1">
